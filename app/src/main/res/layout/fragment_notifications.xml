<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.notifications.NotificationsViewModel.kt"
    android:transitionGroup="true">


    <TextView
        android:id="@+id/textview"
        android:layout_width="321dp"
        android:layout_height="87dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="41dp"
        android:text="escribete algo capo"
        android:textSize="35dp" />

    <EditText
        android:id="@+id/textaquen"
        android:layout_width="339dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="95dp"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="53dp"
        android:layout_marginEnd="85dp"
        android:layout_marginRight="85dp"
        android:hint="escribe un texto aqui" />

    <Button
        android:id="@+id/vozarron"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textaquen"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="165dp"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="153dp"
        android:layout_marginBottom="425dp"
        android:text="Altavoz" />


</RelativeLayout>